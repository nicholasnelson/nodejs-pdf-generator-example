<div class="row">
  <div class="col-8 offset-2">
    <h1>Create a PDF</h1>
    <form method="post" action="/pdf">
      <fieldset>
        <div class="form-group">
          <label for="emailInput">Email address</label>
          <input type="email" class="form-control" id="emailInput" name="email" placeholder="Enter email" />
        </div>
        <div class="form-group">
          <label for="nameInput">Name</label>
          <input type="text" class="form-control" placeholder="Enter name" id="nameInput" name="name" />
        </div>
        <div class="form-group">
          <input class="btn btn-primary" type="submit" value="Create PDF" />
        </div>
      </fieldset>
    </form>
  </div>
</div>
